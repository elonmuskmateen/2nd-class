.flex-container
{
    /* (grid) automitically give colomns and rowss */
    display: grid;

    /* i specify colomns  --- repeat will automitically repeat the colomns */
    grid-template-columns: repeat(3, 100px);

    /* row are auto cauz it should increas rows autometically whitout specify */
    /* minmax will felx the rows (150px is min height) and (auto is width) */
    /* grid-template-rows: 12vw ; */
    grid-auto-rows: minmax(150px, auto);

    grid-gap: 10px;
}

